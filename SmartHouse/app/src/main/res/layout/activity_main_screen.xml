<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    tools:context=".SignInScreen">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appbar"

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/grey"
      android:paddingHorizontal="25dp"
      android:paddingTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Your Home"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp">

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_baseline_location_on_24"
          app:tint="@color/lite_grey" />

      <TextView
          android:id="@+id/textView11"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="2715 Ash Dr. San Jose, South Dakota 83475"
          android:textColor="@color/lite_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

      <LinearLayout
          android:layout_width="303dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:text="ROOMS"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="68dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/green" />
      </LinearLayout>

      <ImageButton
          android:id="@+id/imageButton3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:background="@drawable/circule_button"
          app:srcCompat="@drawable/ic_group_9"
          app:tint="@color/white" />


    </LinearLayout>


  </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingVertical="20dp"
      tools:layout_editor_absoluteX="1dp"
      tools:layout_editor_absoluteY="175dp">

    <LinearLayout
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/cards"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

      <ImageView
          android:id="@+id/sofa"
          android:layout_width="98dp"
          android:layout_height="98dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/ic_sofa" />

      <TextView
          android:id="@+id/LivingRoom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="sans-serif-black"
          android:text="Living Room"
          android:textColor="@color/green"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/textView18"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="×3 Devices"
          android:textColor="@color/lite_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/cards"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

      <ImageView
          android:id="@+id/room"
          android:layout_width="98dp"
          android:layout_height="98dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/ic_room" />

      <TextView
          android:id="@+id/Kitchen"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="sans-serif-black"
          android:text="Kitchen"
          android:textColor="@color/green"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/textView19"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="×3 Devices"
          android:textColor="@color/lite_grey" />
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingVertical="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    <LinearLayout
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/green"
        android:background="@drawable/cards"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

      <ImageView
          android:id="@+id/Bathroom_item"
          android:layout_width="98dp"
          android:layout_height="98dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/ic_vanna" />

      <TextView
          android:id="@+id/Bathroom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="sans-serif-black"
          android:text="Bathroom"
          android:textColor="@color/white"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/textView20"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="×3 Devices"
          android:textColor="@color/white_bg" />
    </LinearLayout>

  </LinearLayout>


